<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_list_view_model"
    tools:context="filipmaly.flightnotes.list_view_model">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Přidání Modelu"
        android:id="@+id/buttonADDModelListView"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickModel"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listViewModel"
        android:choiceMode="singleChoice" />


</LinearLayout>


