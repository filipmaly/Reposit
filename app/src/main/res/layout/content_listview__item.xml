<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_listview__item"
    tools:context="filipmaly.flightnotes.Listview_Item">



        <TextView
            android:id="@+id/DateCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Kapacita:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/ModelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/DateCalendar"
            android:layout_below="@+id/DateCalendar"
            android:text="Jméno:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_Cycle_Battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ModelName"
            android:layout_below="@+id/ModelName"
            android:text="Cykly: "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_Lastuse_Battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_Cycle_Battery"
            android:layout_below="@+id/textView_Cycle_Battery"
            android:text="Poslední log: "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/TextModeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignBottom="@+id/textView_Cycle_Battery"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/Battery_LastUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_Lastuse_Battery"
            android:layout_alignBottom="@+id/textView_Lastuse_Battery"
            android:layout_alignLeft="@+id/TextModeSpinner"
            android:text="TextView" />

        <TextView
            android:id="@+id/Battery_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignBottom="@+id/ModelName"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/Battery_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignBottom="@+id/DateCalendar"
            android:layout_centerHorizontal="true" />






</RelativeLayout>
