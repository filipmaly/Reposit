<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="filipmaly.flightnotes" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icom"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".get_vallue_button"
            android:label="@string/title_activity_get_vallue_button"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ListViewActivity"
            android:label="@string/title_activity_list_view"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Listview_Item"
            android:label="@string/title_activity_listview__item"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".calendar_activity"
            android:label="@string/title_activity_calendar_activity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".get_calendar_data"
            android:label="@string/title_activity_get_calendar_data"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".list_view_model"
            android:label="@string/title_activity_list_view_model"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".list_view_model_item"
            android:label="@string/title_activity_list_view_model_item"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".AddModel"
            android:label="@string/title_activity_add_model"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SpinnerMode"
            android:label="@string/title_activity_spinner_mode"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ListWiev_Calendar_Item"
            android:label="@string/title_activity_list_wiev__calendar__item"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
